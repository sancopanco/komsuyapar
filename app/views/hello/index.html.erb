<% content_for :head do %>
  <%= stylesheet_link_tag "index" %>
  <script type="text/javascript">
    $(function() {
      init();
      initSearch();
    });
  </script>
<% end %>

<div class="container" style="text-align: center;">
  <div class="row">
    
      <h2 class="brand page-title">Komşu yapar</h2>
      <p class="lead">
        İhtiyacın olan hizmetleri yakın çevrenden ara, yapabileceklerini sende ekle!
      </p>
      
       <form id="search" class="yetenek-search">
              <div class="input-group input-group-lg">
                <input id="city" class="form-control" type="text" placeholder="Hizmet ara...">
                <span class="input-group-btn">
                        <button class="btn" type="submit">Ara</button>
                </span>
              </div>
       </form>
       <p>
        <%= link_to "SENDE YETENEKLERİNİ EKLE", 
          add_path,:class=>"btn btn-lg btn-yetenek-ekle" %> 
        </p>
        <p>
        <%= link_to "Haritaya git", 
          add_path,:class=>"btn btn-lg btn-yetenek-ekle" %> 
        </p>
      
   
  </div>
</div>

